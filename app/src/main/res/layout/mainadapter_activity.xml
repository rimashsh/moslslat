<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeCard"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="12dp"
    android:background="@color/colorPrimaryDark"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="18dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="UnusedAttribute">


    <LinearLayout
        android:id="@+id/mainholdre"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/placeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription,InefficientWeight"
            android:layout_weight="0.5" />

        <LinearLayout
            android:id="@+id/placeNameHolder"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:background="@color/linearBar">


            <TextView
                android:id="@+id/placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#13aaaf"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_gravity="left|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.5"
                android:layout_marginLeft="25dp"
                tools:ignore="InefficientWeight,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>